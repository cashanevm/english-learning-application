@model List<english_learning_application.Models.TranslatedSentence>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, english_learning_application

<h1>Translated Sentences</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Owner ID</th>
            <th>Word</th>
            <th>Sentence</th>
            <th>Language</th>
            <th>Translation</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ID)</td>
                <td>@Html.DisplayFor(modelItem => item.OwnerId)</td>
                <td>@Html.DisplayFor(modelItem => item.Word.OriginalWord)</td>
                <td>@Html.DisplayFor(modelItem => item.Sentence.OriginalSentence)</td>
                <td>@Html.DisplayFor(modelItem => item.Language.Key)</td>
                <td>@Html.DisplayFor(modelItem => item.Translation)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
