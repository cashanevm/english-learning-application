@model english_learning_application.Models.Sentence

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, english_learning_application

<h2>Edit Sentence</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="OriginalSentence" class="control-label"></label>
        <input asp-for="OriginalSentence" class="form-control" />
        <span asp-validation-for="OriginalSentence" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WordId" class="control-label"></label>
        <select asp-for="WordId" asp-items="@ViewBag.WordId" class="form-control"></select>
        <span asp-validation-for="WordId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
