@model english_learning_application.Models.Test

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, english_learning_application

<h1>Details</h1>

<div>
    <h4>Test</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TimePerWord)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimePerWord)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OwnerId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OwnerId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Options)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Options)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Language.Key)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Language.Key)
        </dd>
    </dl>
</div>
<div>
    <h4>Words</h4>
    <hr />
    <ul>
        @foreach (var word in Model.Words)
        {
            <li>@word.OriginalWord</li>
        }
    </ul>
</div>

<p>
    @Html.ActionLink("Start the test", "Start", new { id = Model.ID }) |
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>


