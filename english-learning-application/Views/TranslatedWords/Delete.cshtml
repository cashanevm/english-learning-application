@model english_learning_application.Models.TranslatedWord

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, english_learning_application


@{
    ViewData["Title"] = "Delete";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>TranslatedWord</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Word)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Word.OriginalWord)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Language)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Language.Key)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SpeechPart)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SpeechPart.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Translation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Translation)
        </dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ID" />
        <input type="hidden" asp-for="OwnerId" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
