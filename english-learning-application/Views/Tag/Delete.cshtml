@model english_learning_application.Models.Tag

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, english_learning_application

<h2>Delete Tag</h2>

<div>
    <h4>Are you sure you want to delete this Tag?</h4>
    <h5>Name: <span>@Html.DisplayFor(model => model.Name)</span></h5>
    <h5>Words:</h5>
    <ul>
        @foreach (var word in Model.Words)
        {
            <li>@word.OriginalWord</li>
        }
    </ul>
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
