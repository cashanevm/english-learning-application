@model english_learning_application.Models.Context

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, english_learning_application

<h2>Context Details</h2>

<div>
    <h4>Context</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>

<div>
    <h4>Sentences</h4>
    <hr />
    <ul>
        @foreach (var sentence in Model.Sentences)
        {
            <li>@sentence.OriginalSentence</li>
        }
    </ul>
</div>

<div>
    <h4>Translated Words</h4>
    <hr />
    <ul>
        @foreach (var translatedWord in Model.TranslatedWords)
        {
            <li>@translatedWord.Translation</li>
        }
    </ul>
</div>

<div>
    <h4>Translated Sentences</h4>
    <hr />
    <ul>
        @foreach (var translatedSentence in Model.TranslatedSentences)
        {
            <li>@translatedSentence.Translation</li>
        }
    </ul>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>